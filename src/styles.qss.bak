styles.qss

/* 全局字体和背景 */
QWidget {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    background-color: #1c1c1e;  /* 深色背景 */
    color: #ffffff;  /* 白色文字 */
}

/* QLabel 样式 */
QLabel {
    background-color: #2c2c2e;  /* 较浅的深色背景 */
    border: 1px solid #3a3a3c;
    border-radius: 8px;
    /* padding: 10px; */
    font-size: 16px;
}

QLabel#label_playback, QLabel#label_avm {
    background-color: #000000;  /* 播放区的黑色背景 */
}

/* QComboBox 样式 */
QComboBox {
    background-color: #2c2c2e;
    color: #ffffff;
    border: 1px solid #3a3a3c;
    border-radius: 8px;
    /* padding: 5px; */
    font-size: 16px;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 30px;
    border-left-width: 1px;
    border-left-color: #3a3a3c;
    border-left-style: solid;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
    background-color: #1c1c1e;
}

QComboBox QAbstractItemView {
    background-color: #2c2c2e;
    color: #ffffff;
    selection-background-color: #3a3a3c;
    selection-color: #ffffff;
    border: 1px solid #3a3a3c;
}

/* QDateTimeEdit 样式 */
QDateTimeEdit {
    background-color: #2c2c2e;
    color: #ffffff;
    border: 1px solid #3a3a3c;
    border-radius: 8px;
    /* padding: 5px; */
    font-size: 16px;
}

QDateTimeEdit::up-button, QDateTimeEdit::down-button {
    subcontrol-origin: border;
    subcontrol-position: top right;
    width: 20px;
    border-width: 1px;
    background-color: #3a3a3c;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
}

QDateTimeEdit::up-arrow, QDateTimeEdit::down-arrow {
    width: 10px;
    height: 10px;
    color: #ffffff;
}